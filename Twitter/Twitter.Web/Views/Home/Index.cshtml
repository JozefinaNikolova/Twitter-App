@model IEnumerable<Twitter.Web.Models.TweetViewModel>

<div class="jumbotron">
    <h1>Welcome to Twitter</h1>
</div>

@foreach (var item in Model)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <p>By <strong>@item.PostedBy</strong> on @item.CreatedOn.ToString("dd-MM-yyyy hh:mm")</p>
            <p>@item.Content</p>
            <p>@item.Url</p>
            <p>@item.FavsCount <span class="glyphicon glyphicon-heart"></span></p> 

            @if (this.User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Favourite", "Favourite", "Tweet", new { id = @item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Retweet", "Retweet", "Tweet", new { id = @item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Reply", "Reply", "Tweet", new { id = @item.Id }, new { @class = "btn btn-success" })
            }
        </div>
    </div>
}


